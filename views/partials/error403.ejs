

<section class="max-w-lg mx-auto mt-8 bg-white rounded-2xl shadow-md p-6 text-center">
  <h1 class="text-2xl font-bold text-red-600 mb-3">403 - Acceso denegado</h1>
  <p class="text-gray-700 mb-4">
    No tenés permisos para acceder a esta sección.
  </p>

  <% if (usuario) { %>
    <p class="text-sm text-gray-500 mb-4">
      Estás logueado como:
      <strong><%= usuario.nombre %> <%= usuario.apellido %> (<%= usuario.rol %>)</strong>
    </p>
  <% } else { %>
    <p class="text-sm text-gray-500 mb-4">
      No hay un usuario logueado actualmente.
    </p>
  <% } %>

  <div class="flex justify-center gap-3">
    <a href="/"
       class="bg-gray-800 text-white px-4 py-2 rounded-lg text-sm hover:bg-gray-900">
      Ir al inicio
    </a>

    <% if (!usuario) { %>
      <a href="/usuarios/login"
         class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700">
        Iniciar sesión
      </a>
    <% } %>
  </div>
</section>
