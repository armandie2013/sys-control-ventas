

<section class="max-w-md mx-auto bg-white rounded-2xl shadow-md p-6">
  <h1 class="text-xl font-bold mb-4">Iniciar sesión</h1>

  <% if (errores && errores.length > 0) { %>
    <div class="mb-4 bg-red-100 text-red-700 text-sm rounded p-3">
      <ul class="list-disc list-inside">
        <% errores.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/usuarios/login" method="POST" class="space-y-3">
    <div>
      <label class="block text-sm font-medium mb-1">Email</label>
      <input type="email" name="email" required
             value="<%= oldData.email || '' %>"
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Contraseña</label>
      <input type="password" name="password" required
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <button type="submit"
            class="w-full bg-blue-600 text-white py-2 rounded-lg text-sm font-semibold hover:bg-blue-700">
      Entrar
    </button>
  </form>
</section>
