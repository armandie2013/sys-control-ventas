

<section class="max-w-md mx-auto bg-white rounded-2xl shadow-md p-6">
  <h1 class="text-xl font-bold mb-4">Registrar usuario</h1>

  <% if (errores && errores.length > 0) { %>
    <div class="mb-4 bg-red-100 text-red-700 text-sm rounded p-3">
      <ul class="list-disc list-inside">
        <% errores.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/usuarios/registrar" method="POST" class="space-y-3">
    <div>
      <label class="block text-sm font-medium mb-1">Nombre</label>
      <input type="text" name="nombre" required
             value="<%= oldData.nombre || '' %>"
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Apellido</label>
      <input type="text" name="apellido" required
             value="<%= oldData.apellido || '' %>"
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Email</label>
      <input type="email" name="email" required
             value="<%= oldData.email || '' %>"
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Contraseña</label>
      <input type="password" name="password" required
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <div>
      <label class="block text-sm font-medium mb-1">Repetir contraseña</label>
      <input type="password" name="password2" required
             class="w-full border rounded px-3 py-2 text-sm">
    </div>

    <button type="submit"
            class="w-full bg-green-600 text-white py-2 rounded-lg text-sm font-semibold hover:bg-green-700">
      Crear usuario
    </button>
  </form>
</section>
